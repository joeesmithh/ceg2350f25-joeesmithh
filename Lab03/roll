# read -p "Roll a random number between 1 and your positive integer: " input

if [ $# == 1 ]
then
	input=$1

	if [[ $input =~ ^[1-9][0-9]*$ ]]
	then
		random_number=$((1 + RANDOM % $input))
		echo "You rolled a $random_number"
	else
		echo "Invalid argument value! Argument must be positive integer."	
	fi
else
	echo "Invalid argument count! One positive integer argument must be given."
fi

