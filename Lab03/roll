#!/usr/bin/env bash

dice=$1
sides=$2

# If not two arguments
if [ ! $# == 2 ] 
then
	# Prompt for input
	read -p "Input # dice to roll: " dice
	read -p "Input # dice   sides: " sides
fi

# Validate positive integer inputs
while [[ ! $dice =~ ^[1-9][0-9]*$ ]]; do
	read -p "Invalid dice  count! Not a positive integer. Try again: " dice
done

while [[ ! $sides =~ ^[1-9][0-9]*$ ]]; do
	read -p "Invalid sides count! Not a positive integer. Try again: " sides
done