# read -p "Roll a random number between 1 and your positive integer: " input

input=$1

if [ $# != 1 ]
then
	read -p "Invalid argument count! One positive integer argument must be given: " input
fi

while [[ ! $input =~ ^[1-9][0-9]*$ ]]; do
	read -p "Invalid input! Must be a positive integer. Try again: " input
done

random_number=$((1 + RANDOM % $input))
echo "You rolled a $random_number"

